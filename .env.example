# Konfiguracja API Keys
# Skopiuj ten plik jako .env i uzupełnij wartości

# FRED API (darmowy - zarejestruj się na https://fred.stlouisfed.org/)
FRED_API_KEY=your_fred_api_key_here

# Telegram Bot (opcjonalny - utwórz bota przez @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Email Alerts (opcjonalny)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENT=recipient@email.com

# Database (opcjonalny - domyślnie SQLite)
DATABASE_URL=sqlite:///data/trading.db
